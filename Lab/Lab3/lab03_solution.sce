function [x, y, z] = func1(a, b)
    // สร้างค่าของตัวแปร x, y, z จากค่าของตัวแปร a, b ที่กำหนดให้
    // Input : 
    //     a, b : จำนวนจริง
    // Output : 
    //     x, y, z : จำนวนจริง
    x = 2;
    y = -1; 
    z = 4;
    return; // output ตัวแปรทั้งสามทันที โดยไม่ต้องรอให้ถึง endfunction 
    x = a^3 - 2*b;
    y = a / ((a+b)^2 + 1);
    z = (a^2 + b^2)^(1/3);
endfunction

function [p, q, r, s] = func2(u, v, w)
    // สร้างค่าของตัวแปร p, q, r, s จากค่าของตัวแปร u, v, w ที่กำหนดให้
    // Input : 
    //     u, v, w : จำนวนจริง
    // Output : 
    //     p, q, r, s : จำนวนจริง 
    p = u + w^2;
    q = (u^2)*w - v^3;
    r = 2*v/(w^2 + 1);
    s = w + sqrt(u^2 + 4*v^2);
endfunction

