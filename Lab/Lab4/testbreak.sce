// แสดงการใช้คำสั่ง break ร่วมกับคำสั่ง for
for i=1:10
    disp(i^2)   // แสดงค่าของ i^2 ทางจอภาพ
    
    // ออกจากการทำซ้ำทันที เมื่อ i = 5
    if i==5 then
        break;
    end
    
end

// แสดงการใช้คำสั่ง break ร่วมกับคำสั่ง while
i = 20; // ในตอนแรกให้ i = 20
while i>0
    disp(sqrt(i));  // แสดงค่าของรากที่สองของ i ทางจอภาพ
    
    // ออกจากการทำซ้ำทันที เมื่อ i < 15
    if i<15 then
        break;
    end
    
    i = i-2; // ลดค่าของ i ทีละ 2
end
